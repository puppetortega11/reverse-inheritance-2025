# Solana Trading Bot Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# SOLANA CONFIGURATION
# ===========================================
SOLANA_NETWORK=mainnet
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
# Alternative RPC URLs (for redundancy):
# SOLANA_RPC_URL=https://solana-api.projectserum.com
# SOLANA_RPC_URL=https://rpc.ankr.com/solana

# ===========================================
# JUPITER API CONFIGURATION
# ===========================================
JUPITER_API_URL=https://quote-api.jup.ag/v6
JUPITER_SWAP_URL=https://quote-api.jup.ag/v6/swap

# ===========================================
# BOT WALLET CONFIGURATION
# ===========================================
# IMPORTANT: Generate a new wallet for the bot, don't use your main wallet
BOT_WALLET_PRIVATE_KEY=your_bot_wallet_private_key_here
BOT_WALLET_PUBLIC_KEY=your_bot_wallet_public_key_here

# ===========================================
# TRADING STRATEGY CONFIGURATION
# ===========================================
TRADING_STRATEGY=aggressive
# Options: conservative, moderate, aggressive, custom

# Position sizing
MAX_POSITION_SIZE=10
# Maximum percentage of wallet to use per trade (1-100)

MIN_TRADE_AMOUNT=0.01
# Minimum trade amount in SOL

# Risk management
STOP_LOSS_PERCENTAGE=5
# Stop loss percentage (1-50)

TAKE_PROFIT_PERCENTAGE=15
# Take profit percentage (1-100)

MAX_DAILY_LOSS=20
# Maximum daily loss percentage before stopping

# ===========================================
# TRADING PARAMETERS
# ===========================================
# Token filters
MIN_MARKET_CAP=1000000
# Minimum market cap in USD

MIN_LIQUIDITY=50000
# Minimum liquidity in USD

MAX_SLIPPAGE=3
# Maximum slippage percentage

# Technical indicators
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70
MACD_FAST_PERIOD=12
MACD_SLOW_PERIOD=26
MACD_SIGNAL_PERIOD=9

# ===========================================
# API CONFIGURATION
# ===========================================
PORT=3000
HOST=0.0.0.0

# Security
JWT_SECRET=your_jwt_secret_here
API_RATE_LIMIT=100
# Requests per minute per IP

# CORS
CORS_ORIGIN=*
# For production, specify your domain

# ===========================================
# MONITORING AND LOGGING
# ===========================================
LOG_LEVEL=info
# Options: debug, info, warn, error

ENABLE_METRICS=true
METRICS_PORT=9090

# Health check
HEALTH_CHECK_INTERVAL=30
# Seconds between health checks

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# For production, use a proper database
DATABASE_URL=sqlite:///data/trading_bot.db
# Alternative: postgresql://user:pass@localhost/dbname

# ===========================================
# NOTIFICATION CONFIGURATION
# ===========================================
# Discord webhook for notifications
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# Email notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
NOTIFICATION_EMAIL=your_notification_email@gmail.com

# ===========================================
# ADVANCED CONFIGURATION
# ===========================================
# Trading hours (24-hour format)
TRADING_START_HOUR=0
TRADING_END_HOUR=23

# Cooldown periods
TRADE_COOLDOWN=300
# Seconds between trades

POSITION_COOLDOWN=1800
# Seconds before opening new position in same token

# Gas optimization
PRIORITY_FEE_MULTIPLIER=1.5
# Multiply base fee for faster transactions

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================
NODE_ENV=production
# Options: development, production

DEBUG=false
# Enable debug mode

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
BACKUP_INTERVAL=24
# Hours between backups

BACKUP_RETENTION_DAYS=30
# Days to keep backups

# ===========================================
# EXTERNAL SERVICES
# ===========================================
# CoinGecko API for price data
COINGECKO_API_KEY=your_coingecko_api_key_here

# Optional: Custom RPC provider
CUSTOM_RPC_URL=
CUSTOM_RPC_API_KEY=

# ===========================================
# SECURITY SETTINGS
# ===========================================
# Enable additional security features
ENABLE_RATE_LIMITING=true
ENABLE_IP_WHITELIST=false
# Comma-separated list of allowed IPs

# Session management
SESSION_TIMEOUT=3600
# Session timeout in seconds

# ===========================================
# PERFORMANCE TUNING
# ===========================================
# Memory limits
MAX_MEMORY_USAGE=80
# Percentage of available memory

# CPU limits
MAX_CPU_USAGE=80
# Percentage of available CPU

# Connection pooling
DB_POOL_SIZE=10
DB_POOL_TIMEOUT=30000

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_AUTO_REBALANCING=true
ENABLE_DYNAMIC_POSITION_SIZING=true
ENABLE_SENTIMENT_ANALYSIS=false
ENABLE_SOCIAL_MEDIA_MONITORING=false
ENABLE_ARBITRAGE_DETECTION=false

# ===========================================
# COMPLIANCE AND REPORTING
# ===========================================
# Tax reporting
ENABLE_TAX_REPORTING=true
TAX_REPORTING_CURRENCY=USD

# Audit logging
ENABLE_AUDIT_LOGS=true
AUDIT_LOG_RETENTION_DAYS=365
